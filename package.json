{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "bootstrap": "^5.1.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.1",
    "browser-sync": "^2.27.7",
    "ejs": "^3.1.6",
    "ejs-cli": "^2.2.3",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "rollup": "^2.66.1"
  },
  "scripts": {
    "css-all": "npm-run-all css-compile css-prefix",
    "css-compile": "node-sass src/scss/app.scss public/css/app.css --watch",
    "css-prefix": "postcss --use autoprefixer -r public/css/app.css",
    "watch-ejs": "nodemon --legacy-watch --watch src/ -e ejs --ignore public/ -x \"npm run ejs-load\"",
    "ejs-load": "ejs-cli -b src/ \"*.ejs\"  -o public/ --options src/data.json",
    "watch-js": "nodemon --watch src/js/ -e js --ignore public/ -x \"npm run js-load\" ",
    "js-load": "rollup -i index.js -o public/js/app.js",
    "sync": "browser-sync start -s 'public' -f 'public' ",
    "dev": "run-p css-all watch-ejs watch-js js-load sync"
  },
  "author": "Mostafizur Rahman",
  "license": "ISC"
}
